def string_union_intersection(str1, str2):
    
    set1 = set(str1)
    set2 = set(str2)

    union = set1.union(set2)
    intersection = set1.intersection(set2)

    return union, intersection

s1 = input("Enter first string: ")
s2 = input("Enter second string: ")

union_result, intersection_result = string_union_intersection(s1, s2)

print("Union of characters:", ''.join(sorted(union_result)))
print("Intersection of characters:", ''.join(sorted(intersection_result)))
