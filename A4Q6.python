def fibonacci_generator(n):
    a, b = 0, 1
    for _ in range(n):
        yield a
        a, b = b, a + b

num_terms = int(input("Enter the number of Fibonacci terms to generate: "))
print(f"Fibonacci series up to {num_terms} terms:")
for term in fibonacci_generator(num_terms):
    print(term, end=" ")
