import tkinter as tk
import random
import string

def generate_password():
    letters = string.ascii_letters
    password = "".join(random.choice(letters) for _ in range(10))  
    result.config(text=f"Password: {password}")

win = tk.Tk()
win.title("Password Generator")
win.geometry("350x150")

tk.Button(win, text="Generate Password", command=generate_password).pack(pady=10)
result = tk.Label(win, text="Password: ")
result.pack(pady=10)

win.mainloop()
