import tkinter as tk

window = tk.Tk()
window.title("Radio Button Example")

choice = tk.StringVar(value="None")

radio1 = tk.Radiobutton(window, text="Option 1", variable=choice, value="Option 1")
radio2 = tk.Radiobutton(window, text="Option 2", variable=choice, value="Option 2")
radio3 = tk.Radiobutton(window, text="Option 3", variable=choice, value="Option 3")

radio1.pack(pady=5)
radio2.pack(pady=5)
radio3.pack(pady=5)

window.mainloop()
