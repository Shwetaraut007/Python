# Program to generate number pyramid pattern up to n lines

n = int(input("Enter number of lines: "))

for i in range(1, n+1):
    
    print("  " * (n - i), end="")  
    
    # Increasing numbers
    for j in range(1, i+1):
        print(j, end=" ")
    
    # Decreasing numbers
    for j in range(i-1, 0, -1):
        print(j, end=" ")
    
    print()   # Move to next line
   
