import tkinter as tk
import itertools

window = tk.Tk()
window.title("Changing Background Example")
window.geometry("400x300")

colors = itertools.cycle(["red", "green", "blue", "yellow", "pink", "orange", "purple"])

def change_color():
    
    window.config(bg=next(colors))
 
    window.after(1000, change_color)

change_color()

window.mainloop()
